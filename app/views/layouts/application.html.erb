<!DOCTYPE html>
<html>

<head>
  <%= csrf_meta_tag %>
</head>

<body>
  <div id="header">
    <% if signed_in? -%>
    Hello <%= current_user.email %>
    <%= button_to t(".sign_out"), sign_out_path, method: :delete %>
    <% else -%>
    <%= link_to t(".sign_in"), sign_in_path %>
    <%= link_to t(".sign_up"), sign_up_path %>
    <% end -%>
  </div>

  <div id="flash">
    <% flash.each do |key, value| -%>
    <div id="flash_<%= key %>"><%=h value %></div>
    <% end %>
  </div>
  <div class='links'>
    <%= link_to posts_url do %>All Posts <% end %>
  </div>
  <% if current_user %>
  <div class='links'>
    <%= link_to user_posts_path(current_user) do %>My Posts<% end %>
  </div>
  <% end %>
  <%= yield %>
</body>

</html>