<div class="new-post">

  <%= link_to new_post_path do %>
  New post
  <% end %>
</div>
<div class="posts">
  <% @posts.each do |post| %>
  <div class="post" id="post-<%= post.id %>">
    <p><%= post.message %></p>
    <p><small><%= post.created_at %></small></p>
    <%= button_to "Delete Post", post_path(post), method: :delete %>
  </div>
  <% end %>
</div>